  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "@mariozechner/pi-agent-core": "^0.54.0",
    "@mariozechner/pi-ai": "^0.54.0",
    "@mariozechner/pi-coding-agent": "^0.54.0",
    "@mariozechner/pi-tui": "^0.54.0",
    "@mozilla/readability": "^0.6.0",
    "chalk": "^5.6.2",
    "cli-highlight": "^2.1.11",
    "linkedom": "^0.18.12",
    "picocolors": "^1.1.1"
  },
  "lint-staged": {
    "*.{ts,json}": "biome check --write --unsafe --no-errors-on-unmatched"
